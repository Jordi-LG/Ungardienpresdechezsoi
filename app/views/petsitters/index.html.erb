<div class="container mt-4" >
  <center>
  <span class="m-4"> <h1>Choisissez le Pet Sitter qui vous convient !</h1></span>
  </center>
      <% @petsitters.each do |petsitter| %>
  <div class="card shadow-lg animated zoomIn m-2">
    <div class="row banniere">
      <div class="col-3 m-2">
       <%= image_tag petsitter.avatar, alt: 'avatar' , class:'shadow-lg', style:'height-max: 560px;width:560px;border-radius:10px;border:2px solid black;'%>
      </div>
      <div class="col-9 d-flex row flex-column">
        <div class="container mt-4">
          <h1><%= petsitter.first_name %> <%= petsitter.last_name %> </h1>
          <h4><%= petsitter.describe %></h4>
        </div>

        <div class="modal-footer mt-auto p-2 bd-highligh justify-content-between">
          <span class="badge badge-pill badge-warning  pt-2"><h5><%= petsitter.price %> â‚¬/jours</h5></span>
          <%= link_to petsitter_path(petsitter.id) do %>
              <span class="btn btn-button btn-info"><i class="fa fa-bullseye"></i>Son profil !</span>
            <% end %>
          <%= form_with(url: petsitter_path(petsitter.id)) do %>
            <%= button_tag(type: "submit", class: "btn btn-default") do %>
              <span class="btn btn-button btn-secondary"><i class="fa fa-address-book"></i>Contacter</span>
            <% end %>
          <% end %>
        </div>

      </div>

    </div>

  </div>
          <% end %>
<div class="d-flex justify-content-center mt-3">

  <%= link_to petsitters_path do%>
    <span class="btn btn-button btn-dark"><i class="fa fa-angle-double-left"></i> RETOUR ACCUEIL</span>
  <% end %>
</div>

</div>
