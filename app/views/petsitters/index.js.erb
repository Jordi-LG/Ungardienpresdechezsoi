$(document).ready(function() {
  <% if !@selected_district.empty? %>
  $('#card_petsitters').hide().html("<%= j render 'card_petsitters_JS', petsitter_district: @petsitters_district %>").fadeIn('slow');

  <% else %>
    <% flash[:alert] = 'Il semblerait que la recherche ne donne rien..' %>
    $('#card_petsitters').hide().html("<%= j render 'layouts/flash_alert' %>").fadeIn('slow')
  <% end %>
});
