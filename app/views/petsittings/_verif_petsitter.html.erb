  <!-- VERIFICATION SI LE PETSITTERS EXISTE TOUJOURS EN BASE DE DONNÉES -->
  <% if petsitter_exists(booking.id) == false %>
  <tr id="booking-t-<%= booking.id %>">
    <th scope="row"> <%= booking.petowner_id%> </th>
    <td><%= my_petowners(booking.petowner_id).first_name%> </td>
    <td><%= my_petowners(booking.petowner_id).last_name%> </td>
    <td><%= my_petowners(booking.petowner_id).email%> </td>
    <td><%= booking.updated_at.strftime("%d-%m-%Y")%></td>
    <td class=d-inline-block">
      <%= link_to petowner_path(booking.petowner_id) do %>
        <span class="btn btn-outline-light text-white">Profile de <%= my_petowners(booking.petowner_id).first_name%></span>
      <%end%>
      <% if booking.validate_petowner == false %>
      <span class="btn btn-warning text-white"> Validation en cours </span>
      <% else %>
      <span class="btn btn-info text-white"> Validée</span>
      <%end %>
    </td>
  <%end%>
</tr>
